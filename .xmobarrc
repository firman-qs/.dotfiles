Config { font            = "JetBrainsMono Nerd Font 10"
       , additionalFonts = [ "JetBrainsMono Nerd Font 9"
                           , "Font Awesome 6 Free Solid 10"
                           , "Font Awesome 6 Brands 10"
                           ]
       , borderColor = "#626A6D"
       , border = BottomB
       , borderWidth = 1
       -- Position TopSize and BottomSize take 3 arguments:
       --   an alignment parameter (L/R/C) for Left, Right or Center.
       --   an integer for the percentage width, so 100 would be 100%.
       --   an integer for the minimum pixel height for xmobar, so 24 would force a height of at least 24 pixels.
       --   NOTE: The height should be the same as the trayer (system tray) height.
       , position     = TopSize C 100 22
       , lowerOnStart = True
       , hideOnStart  = False
       , allDesktops  = True
       , persistent   = True
       , iconRoot     = "/home/firmanqs/.xmonad/xpm"  -- default: "."
       , overrideRedirect = False    -- default: True
       , commands = [
                      Run Com "echo" ["<fn=2>\xf135</fn>"] "haskell" 3600
                    , Run Com "echo" ["<fn=2>\xf017</fn> :"] "clockicon" 3600
                    , Run Com "xmb-nettraf" [] "internet" 5
                    , Run Com "xmb-memory" [] "memory" 10
                    , Run Com "xmb-volume" [] "volume" 1
                    , Run Com "xmb-clock" [] "clock" 1
                    , Run Com "xmobarxrdb" [] "accent" 3600
                        -- Cpu usage in percent
                    -- , Run Cpu ["-t", "<fn=2>\xf108</fn>  cpu: (<total>%)","-H","50","--high","red"] 20
                        -- Script that dynamically adjusts xmobar padding depending on number of trayer icons.
                    , Run Com "trayer-padding-icon.sh" [] "trayerpad" 20
                        -- Prints out the left side items such as workspaces, layout, etc.
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<action=`dm_run.py` button=1> <icon=haskell_20_colored.xpm/></action><fc=#5b6268> |</fc> %UnsafeStdinReader% }{<action=`dm-wifi` button=1><fc=%accent%>d/u</fc>%internet%</action><fc=#5b6268> | </fc><action=`st -e htop` button=1><fc=%accent%>mem:</fc>%memory%</action><fc=#5b6268> | </fc><action=`pavucontrol` button=1><fc=%accent%>vol:</fc>%volume%</action><fc=#5b6268> | <fc=%accent%>%clockicon%</fc></fc>%clock%"
       }
